module sevenseg_translate (
    input char[4],
    output out[7]
  ) {

  always {
    case (char) {
      //Convert value to 7-Seg display
      0: out = 7b1000000;
      1: out = 7b1111001;
      2: out = 7b0100100;
      3: out = 7b0110000;
      4: out = 7b0011001;
      5: out = 7b0010010;
      6: out = 7b0000010;
      7: out = 7b1111000;
      8: out = 7b0000000;
      9: out = 7b0011000;
      default: out = 7b1111111;
    }
  }
}